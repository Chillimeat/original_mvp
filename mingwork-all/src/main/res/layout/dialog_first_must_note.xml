<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_cua_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="@dimen/dialogWidth"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/fillet_white_shadow">

        <TextView
            android:id="@+id/dialog_firstMustNote_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/marginCommon"
            android:layout_marginTop="@dimen/marginCommon"
            android:layout_marginRight="@dimen/marginCommon"
            android:gravity="center"
            android:text="重要授权通知"
            android:textColor="@color/text"
            android:textSize="@dimen/WordSizeText" />

        <TextView
            android:id="@+id/dialog_firstMustNote_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_firstMustNote_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/marginCommon"
            android:layout_marginTop="@dimen/marginCommon"
            android:layout_marginRight="@dimen/marginCommon"
            android:gravity="center"
            android:text="重要授权通知内容"
            android:textColor="@color/textLine"
            android:textSize="@dimen/WordSizeText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/dialog_firstMustNote_con"
            android:layout_marginLeft="@dimen/marginCommon"
            android:layout_marginTop="@dimen/marginCommon"
            android:layout_marginRight="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginCommon"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/dialog_firstMustNote_no"
                android:layout_width="0dp"
                android:layout_height="@dimen/butBigHeight"
                android:layout_marginLeft="@dimen/marginTop"
                android:layout_marginRight="@dimen/marginTop"
                android:layout_weight="1"
                android:background="@drawable/fillet_background"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:text="不同意"
                android:textColor="@color/text"
                android:textSize="@dimen/WordSizeText" />

            <Button
                android:id="@+id/dialog_firstMustNote_yes"
                android:layout_width="0dp"
                android:layout_height="@dimen/butBigHeight"
                android:layout_marginLeft="@dimen/marginTop"
                android:layout_marginRight="@dimen/marginTop"
                android:layout_weight="2"
                android:background="@drawable/fillet_warning_big"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:text="同意"
                android:textColor="@color/white"
                android:textSize="@dimen/WordSizeText" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>